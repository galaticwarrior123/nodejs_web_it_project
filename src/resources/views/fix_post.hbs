<div class="fix_post">
    <form action="" class="create_form_body" method="post" enctype="multipart/form-data">
        <div class="create_form_title">
            <h2 style="margin-top: 0">Sửa thông tin</h2>
        </div>
        <div class="create_form_body_detail">
            <div class="create_form_body_item">
                <label for="name">Tiêu đề</label>
                <input type="text" name="name" id="form_title" placeholder="Nhập tiêu đề">
            </div>
            <div class="create_form_body_item">
                <label for="add">Địa chỉ</label>
                <input type="text" name="add" id="form_add" placeholder="Nhập địa chỉ">
            </div>
            <div class="create_form_body_item">
                <label for="acreage">Diện tích</label>
                <input type="text" name="acreage" id="form_acreage" placeholder="Nhập diện tích">
            </div>
            <div class="create_form_body_item">
                <label for="price">Giá</label>
                <input type="text" name="price" id="form_price" placeholder="Nhập giá">
            </div>
            <div class="create_form_body_item">
                <label for="phone">Số điện thoại</label>
                <input type="text" name="phone" id="form_phone" placeholder="Nhập số điện thoại">
            </div>
            <div class="create_form_body_item">
                <label for="image">Hình ảnh</label>
                <input type="file" name="image" id="form_image" placeholder="Chọn hình ảnh" multiple>
            </div>
            <div class="create_form_body_item">
                <label for="description">Mô tả</label>
                <textarea name="description" id="form_description" cols="65" rows="10"
                    placeholder="Nhập mô tả"></textarea>
            </div>
            <div class="create_form_body_item " style="margin-top:10px">
                <label for="category">Loại tin</label>
                <select name="category" id="category">
                    <option value="1">Cho thuê phòng trọ</option>
                    <option value="2">Cho thuê nhà nguyên căn</option>
                    <option value="3">Cho thuê chung cư mini</option>
                </select>
            </div>
            <input type="submit" value="Đồng ý" class="btn-danger">
            <input type="submit" value="Hủy" class="btn-danger">
        </div>
    </form>
</div>